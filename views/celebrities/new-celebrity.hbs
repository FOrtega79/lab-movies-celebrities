<h2>Insert here a new celebrity</h2>
<form action="/celebrities/create" method="POST">
    <label>Name of the Celebrity:</label>
    <input type="text" name="name" />
    
    <label>Occupation:</label>
    <input type="text" name="occupation" />
    
    <label>Popular Quote:</label>
    <input type="text" name="catchPhrase" />

<button type="submit">Submit new Celeb!</button>

</form>


{{#if errMsg}}
<h3>{{errMsg}}</h3>
{{/if}}